
<% @courses.each do |course| %>
<div  class="w-full flex border-b p-2 border-gray-300">

    <div class="flex flex-col ">
        <div class="flex flex-row">
            <div class="basis-1/4">
            </div>
            <div class="basis-2/4">
                <p class="font-bold text-xl mx-auto "><%= course.material_name %></p>
            </div>
            <div class="basis-1/4">
            </div>
        </div>
        <!-- Title course -->
        <div class="mt-4">
            <h1 class="font-bold text-xl md:text-2xl">
                <%= link_to course_path(course)  do %> <%= course.title %><% end %>
            </h1>
        </div>
        <!-- Feed Content course -->
        <div class="my-2">
        <%= link_to course_path(course)  do %>
            <%= truncate(strip_tags(course.content.to_s.html_safe), length: 400) %>
            <span class="ln-btn-color ln-btn-hover-color ">Continuer la lecture</span> 
        <% end %>
        </div>

        <!-- Bottom items of course -->
        <div class="border-t mt-2">
            <div class="flex justify-between my-1">
            <p  class="flex ml-2 text-md font-semibold">
                <%= link_to course_path(course), class:""  do %>
                    <%#= course.flashes.count %>
                    <span class="bg-black ml-2">Essentiels</span>
                <% end %>
            </p>
            <p  class="flex ml-2 text-md font-semibold">
                <%= link_to course_path(course), class:""  do %>
                    <%#= course.exercices.count %>
                    <span class="bg-black ml-2">Exercices</span>
                <% end %>
            </p>
            <p  class="flex ml-2 text-md font-semibold">
                <%= link_to course_path(course), class:""  do %>
                    <%#= course.questions.count %>
                    <span class="bg-black ml-2">Echanges</span>
                <% end %>
            </p>
            </div>
        </div>
    </div>
    </div>
    
    <% end %>